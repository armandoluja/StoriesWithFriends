<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:context="edu.rosehulman.lujasaa.swf.Fragments.FriendTopFragment">


    <Button
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="@string/Friends"
        android:id="@+id/friend_view_button"
        android:layout_gravity="left|top" />

    <Button
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:text="Frend Requests"
        android:id="@+id/friend_request_view_button"
        android:layout_gravity="right|top"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/friend_view_button"
        android:layout_toEndOf="@+id/friend_view_button" />
</RelativeLayout>
