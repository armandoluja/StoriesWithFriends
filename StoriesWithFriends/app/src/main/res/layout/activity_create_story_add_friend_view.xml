<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/create_story_add_friend_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/user_picture"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/create_story_add_friend_image"
        android:layout_toRightOf="@+id/create_story_add_friend_image"
        android:layout_toEndOf="@+id/create_story_add_friend_image"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp" />
</RelativeLayout>