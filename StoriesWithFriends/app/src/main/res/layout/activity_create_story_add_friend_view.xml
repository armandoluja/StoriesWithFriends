<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/colorPrimary"
    card_view:cardCornerRadius="6dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/create_story_add_friend_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/user_picture" />

        <TextView
            android:id="@+id/create_story_add_friend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/create_story_add_friend_image"
            android:layout_toEndOf="@+id/create_story_add_friend_image"
            android:layout_toRightOf="@+id/create_story_add_friend_image"
            android:text="UserName"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>